<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:GLView="http://schemas.android.com/apk/res"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <me.wowtao.pottery.gl.GLView
            android:id="@+id/pottery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            GLView:mode="derocate">
    </me.wowtao.pottery.gl.GLView>

    <RadioGroup
            android:id="@+id/decorate_type"
            android:layout_width="match_parent"
            android:background="@drawable/bg_d"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

        <RadioButton
                android:id="@+id/decorate_type_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/decorate_type_left"
                android:button="@null"
                android:contentDescription="@null"
                android:gravity="center"/>

        <RadioButton
                android:visibility="gone"
                android:id="@+id/decorate_type_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/decorate_type_center"
                android:button="@null"
                android:contentDescription="@null"
                android:gravity="center"
                android:text="边饰"/>

        <RadioButton
                android:id="@+id/decorate_type_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/decorate_type_center"
                android:button="@null"
                android:contentDescription="@null"
                android:gravity="center"
                android:text="点缀"/>

        <Button
                android:id="@+id/decorate_type_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/decorate_type_center"
                android:button="@null"
                android:contentDescription="@null"
                android:gravity="center"
                android:text="底款"/>

    </RadioGroup>

    <HorizontalScrollView
            android:id="@+id/decorator_scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_d"
            android:layout_below="@id/decorate_type"
            android:scrollbars="none">

        <LinearLayout
                android:id="@+id/decorator"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="2dp">
        </LinearLayout>
    </HorizontalScrollView>

    <ImageButton
            android:id="@+id/back_to_home_page_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/decorator_scrollView"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/last"/>

    <ImageButton
            android:id="@+id/erase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/decorator_scrollView"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:src="@drawable/erase"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:textOff="@null"
            android:textOn="@null"/>

    <ImageButton
            android:id="@+id/mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/erase"
            android:layout_alignRight="@id/erase"
            android:layout_alignEnd="@id/erase"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:src="@drawable/mark"/>

    <ImageButton
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/kaohua"/>

    <SeekBar
            android:id="@+id/changeSize"
            android:layout_width="200dp"
            android:layout_marginLeft="-70dp"
            android:layout_height="wrap_content"
            android:progress="50"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:max="100"
            android:rotation="270"/>

</RelativeLayout>