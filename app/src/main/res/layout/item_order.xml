<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
            android:id="@+id/order_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:text="123456789987654321"
            />

    <com.android.volley.toolbox.NetworkImageView
            android:layout_below="@id/order_number"
            android:id="@+id/order_image"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/launcher_icon"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:padding="8dp"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/order_image"
            android:orientation="vertical"
            android:layout_below="@id/order_number"
            android:layout_alignBottom="@id/order_image"
            android:layout_centerVertical="true"
            >


        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/pottery_name"
                  android:gravity="center_vertical"
                  android:textSize="16sp"
                  android:text="my_pottery"
                  android:layout_weight="1"
                />

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/pottery_price"
                  android:textSize="16sp"
                  android:gravity="center_vertical"
                  android:text="137yuan"
                  android:layout_weight="1"
                />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/order_status"
                  android:textSize="16sp"
                  android:text="已完成"
                  android:gravity="center_vertical"
                  android:layout_weight="1"
                />

    </LinearLayout>

</RelativeLayout>