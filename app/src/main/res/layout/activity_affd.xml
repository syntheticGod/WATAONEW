<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activity.AFFDActivity">

    <me.wowtao.pottery.gl.FFDView
            android:id="@+id/glview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:deformation_compute_shader_name="@string/deformation_compute_shader_name"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="对称点个数，默认3"
            android:id="@+id/dup"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/controlPointNumber"
            android:hint="每个维度上的控制顶点个数，默认5"
            android:layout_below="@id/dup"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/controlPointNumber"
            android:text="撤消上一步操作"
            android:id="@+id/restore"/>

</RelativeLayout>
