<?xml version="1.0" encoding="utf-8"?><!DOCTYPE RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:GLView="http://schemas.android.com/apk/res"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <me.wowtao.pottery.gl.GLView
            android:id="@+id/pottery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            GLView:background="@drawable/pottery_finished_activity_background"
            GLView:mode="interact"/>

    <LinearLayout
            android:id="@+id/menu_bar"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:alpha="0"
            android:background="@color/transparent"
            android:orientation="vertical"
            android:visibility="gone">

        <ImageButton
                android:id="@+id/back_to_home_page_button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/new_home"/>

        <ImageButton
                android:id="@+id/share_button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/new_share"/>

        <ImageButton
                android:id="@+id/buy_button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/new_buy"/>

        <ImageButton
                android:id="@+id/take_photo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/new_collect"/>

        <!--android:visibility="gone"-->
        <ImageButton
                android:id="@+id/ffd"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/create_button"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/potteryinf"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

        <ImageView
                android:id="@+id/height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/glass_g"
                android:contentDescription="@null"
                android:gravity="center"/>

        <ImageView
                android:id="@+id/width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/glass_k"
                android:contentDescription="@null"
                android:gravity="center"/>
    </LinearLayout>

    <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/potteryinf"
            android:layout_alignRight="@+id/potteryinf"
            android:layout_below="@+id/potteryinf"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/menu_bar"
            android:alpha="0"
            android:max="100"
            android:visibility="gone"/>
    <ImageButton
            android:id="@+id/next"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/new_finish"/>

    <ImageView
            android:id="@+id/markB"
            android:visibility="gone"
            android:layout_below="@id/potteryinf"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/button"/>

</RelativeLayout>